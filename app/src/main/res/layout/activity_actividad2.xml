<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dm2.contentprovider.Actividad2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnInsertar"
        android:text="INSERTAR "/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/btnInsertar"
        android:id="@+id/btnBorrar"
        android:text="BORRAR"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnBorrar"
        android:id="@+id/btnActualizar"
        android:text="ACTUALIZAR"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnListar"
        android:layout_below="@id/btnBorrar"
        android:text="LISTAR"
        android:layout_toRightOf="@id/btnInsertar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnListar"
        android:id="@+id/txtListado"/>
</RelativeLayout>
